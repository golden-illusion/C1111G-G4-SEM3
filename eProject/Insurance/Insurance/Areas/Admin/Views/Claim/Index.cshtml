@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Dashboard";
}

@model IEnumerable<Insurance.Models.Claim>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    

</table>

<div class="row-fluid">
					<div class="span12">
						<div class="box box-color box-bordered">
							<div class="box-title">
								<h3>
									<i class="icon-table"></i>
									Claim
								</h3>
							</div>
							<div class="box-content nopadding">
								<table class="table table-hover table-nomargin dataTable table-bordered">
									<thead>
										<tr>
											<th>@Html.DisplayNameFor(model => model.AccidentPlace)</th>
											<th>@Html.DisplayNameFor(model => model.AccidentDate)</th>
											<th class='hidden-350'>@Html.DisplayNameFor(model => model.InsuredAmount)</th>
											<th class='hidden-1024'>@Html.DisplayNameFor(model => model.ClaimableAmount)</th>
											<th class='hidden-480'>@Html.DisplayNameFor(model => model.CustomerPolicy.CustPolicyId)</th>
                                            <th> Actions </th>
										</tr>
									</thead>
									<tbody>
                                        
                                        @foreach (var item in Model) 
                                        {
                                            
                                            <tr>
                                                <td>       
                                                    @Html.DisplayFor(modelItem => item.AccidentPlace)
                                                    
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AccidentDate)
                                                </td>
                                                <td class='hidden-350'>
                                                    @Html.DisplayFor(modelItem => item.InsuredAmount)
                                                </td>
                                                <td class='hidden-1024'>
                                                    @Html.DisplayFor(modelItem => item.ClaimableAmount)
                                                </td>
                                                <td class='hidden-480'>
                                                    @Html.DisplayFor(modelItem => item.CustomerPolicy.Policy)
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new { id=item.ClaimId }) |
                                                    @Html.ActionLink("Details", "Details", new { id=item.ClaimId }) |
                                                    @Html.ActionLink("Delete", "Delete", new { id=item.ClaimId })
                                                       
                                                </td>
                                            </tr>
                                        }
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>