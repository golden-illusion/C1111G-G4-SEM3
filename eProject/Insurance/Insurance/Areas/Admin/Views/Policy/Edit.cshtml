@model Insurance.Models.Policy

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = Model.PolicyType + " Policy";
}
@section breadcrumbs {
    <li>
		<a href="~/Admin/Policy/">Policy</a>
        <i class="icon-angle-right"></i>
	</li>
    <li>
		<a href="~/Admin/Policy/Details/@Model.PolicyId">@Model.PolicyType</a>
        <i class="icon-angle-right"></i>
	</li>
    <li>
		<a href="~/Admin/Policy/Edit/@Model.PolicyId">Edit</a>
	</li>
}
<div class="row-fluid">
<div class="span8">
    <div class="box box-bordered box-color">
        <div class="box-title">
            <h3><i class="icon-th-list"></i>Policy "@Model.PolicyType"</h3>
        </div>
        <div class="box-content nopadding">
            @using (Html.BeginForm("Edit", "Policy", FormMethod.Post, new { @class = "form-horizontal form-bordered form-validate",id="test" }))
            {
                if (!Html.ViewData.ModelState.IsValid){
                <div class="alert alert-error" style="margin-bottom:0px !important;">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						@Html.ValidationSummary()
				</div>
                }
                <div class="control-group">
                    @Html.LabelFor(model => model.PolicyType, new { @class = "control-label", @for = "PolicyType" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.PolicyType, new { @class = "input-xlarge", placeholder = "Policy Type", data_rule_required = "true" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.PolicyDuration, new { @class = "control-label", @for = "PolicyDuration" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.PolicyDuration, new { @class = "input-xlarge", placeholder = "Policy Duration", data_rule_digits = "true", data_rule_required = "true" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label", @for = "Description" })
                    <div class="controls">
                        @Html.TextAreaFor(model => model.Description, new { @class = "input-block-level", rows="5", placeholder = "Description", data_rule_required = "true" })
                    </div>
                </div>
                <div class="control-group">
                    @Html.LabelFor(model => model.PolicyPrice, new { @class = "control-label", @for = "PolicyPrice" })
                    <div class="controls">
                        @Html.TextBoxFor(model => model.PolicyPrice, new { @class = "input-xlarge", placeholder = "Policy Fee", data_rule_number = "true", data_rule_required = "true" })
                    </div>
                </div>
                <div class="form-actions">
                    @Html.HiddenFor(model => model.PolicyId) 
                    <button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save changes</button>
                    <button type="button" class="btn" onclick="javascript:location.href='@Url.Action("Index")'"><i class="icon-undo"></i>&nbsp;Cancel</button>
                </div>
            }
        </div>
    </div>
</div>