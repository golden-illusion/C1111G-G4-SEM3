@model IEnumerable<Insurance.Models.Policy>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "List Policies";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PolicyType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PolicyDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PolicyPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyDuration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PolicyPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PolicyId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PolicyId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PolicyId })
        </td>
    </tr>
}

</table>
