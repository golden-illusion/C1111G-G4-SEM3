@model IEnumerable<Insurance.Models.Policy>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "List Policies";
}
@section breadcrumbs {
    <li>
        <a href="~/Admin/Policy/">Policy</a>
    </li>
}
<div class="row-fluid">
    <div class="span8">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    List Policies
                </h3>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Policy Type</th>
                            <th>Duration</th>
                            <th>Policy Fee</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>1</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PolicyType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PolicyDuration) Days
                                </td>
                                <td>$@Html.DisplayFor(modelItem => item.PolicyPrice)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.PolicyId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.PolicyId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.PolicyId })
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm("Create", "Policy", FormMethod.Get))
{
    <p>
    <button class="btn btn-primary" type="submit"><i class="icon-plus-sign"></i> Create</button>
        </p>
}

