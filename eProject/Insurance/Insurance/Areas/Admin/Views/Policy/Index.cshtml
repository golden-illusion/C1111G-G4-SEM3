@model IEnumerable<Insurance.Models.Policy>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "List Policies";
}
@section breadcrumbs {
    <li>
        <a href="~/Admin/Policy/">Policy</a>
    </li>
}
<div class="row-fluid">
    <div class="span12">
        @using (Html.BeginForm("Create", "Policy", FormMethod.Get))
        {
            <p style="margin: 10px 0px 0px !important;">
                <button class="btn btn-primary" type="submit"><i class="icon-plus-sign"></i>&nbsp;Create</button>
            </p>
        }
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                    List Policies
                </h3>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Policy Type</th>
                            <th>Duration</th>
                            <th>Policy Fee</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PolicyId</td>
                                <td>
                                    @Html.ActionLink(item.PolicyType, "Details", new { id = item.PolicyId })
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PolicyDuration) Days
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.PolicyPrice)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.PolicyId })" class="btn btn-orange"><i class='icon-edit'></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


