@model Insurance.Models.Claim

@{
    ViewBag.Title = "Create Claim";
}
<div class="b-titlebar">
    <div class="layout">
        <!-- Bread Crumbs -->
        <ul class="crumbs">
            <li>You are here:</li>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Claims", "Index", "Claim")</li>
            <li>Create</li>
        </ul>
        <!-- Title -->
        <h1>Create Claim</h1>
    </div>
</div>

<div class="content">
    <div class="layout">
        <div class="row-item col-1_4" style="margin: 20px auto 20px 350px;">
            @using (Html.BeginForm("Create", "Claim", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationSummary(true)
                    <div class="message-close icon-remove"></div>
                </div>

                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.AccidentPlace, new { @class = "field-name", data_rule_required = "true", placeholder = "Accident Place (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.AccidentPlace)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.AccidentDate, new { @class = "field-name", data_rule_required = "true", placeholder = "Accident Date (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.AccidentDate)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.InsuredAmount, new { @class = "field-name", data_rule_required = "true", placeholder = "Insured Amount (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.InsuredAmount)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.ClaimableAmount, new { @class = "field-name", data_rule_required = "true", placeholder = "Claimable Amount (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.ClaimableAmount)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="m-full-width">
                    <input class="btn-submit btn colored" type="submit" value="Create Claim" />
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.message-error').each(function () {
                var text = $(this).text().trim();
                if (text.length > 0) {
                    $(this).show();
                }
            });
        });
    </script>
}