@model Insurance.Models.Vehicle

@{
    ViewBag.Title = "Car Information";
}

<div class="content">
    <div class="layout">
        <div class="row-item col-1_4" style="margin: 20px auto 20px 350px;">
            @using (Html.BeginForm("Buy", "Product", new { policyId = (int)ViewBag.PolicyId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationSummary(true)
                    <div class="message-close icon-remove"></div>
                </div>

                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.VehicleName, new { @class = "field-name", data_rule_required = "true", placeholder = "Vehicle Name (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.VehicleName)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.VehicleModel, new { @class = "field-name", data_rule_required = "true", placeholder = "Model (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.VehicleModel)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.VehicleVersion, new { @class = "field-name", data_rule_required = "true", placeholder = "Version (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.VehicleVersion)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.VehicleBodyNumber, new { @class = "field-name", data_rule_required = "true", placeholder = "Body Number (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.VehicleBodyNumber)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="input-wrap m-full-width">
                    @Html.TextBoxFor(model => model.VehicleEngineNumber, new { @class = "field-name", data_rule_required = "true", placeholder = "Engine Number (require)" })
                </div>
                <div class="b-message message-error" style="display: none;">
                    @Html.ValidationMessageFor(model => model.VehicleEngineNumber)
                    <div class="message-close icon-remove"></div>
                </div>
                <div class="m-full-width" style="margin-bottom: 10px;">
                    @Html.CheckBoxFor(model => model.VehicleWarranty)
                    @Html.LabelFor(model => model.VehicleWarranty)
                </div>
                <div class="m-full-width">
                    <input id="submitLogin" class="btn-submit btn colored" type="submit" value="Buy" />
                </div>
            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.message-error').each(function () {
                var text = $(this).text().trim();
                if (text.length > 0) {
                    $(this).show();
                }
            });
        });
    </script>
}
