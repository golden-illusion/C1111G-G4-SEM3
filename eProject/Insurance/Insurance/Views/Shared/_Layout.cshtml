                        <a class="gl" href="#"><i class="icon-google-plus"></i></a>
                        <a class="dr" href="#"><i class="icon-dribbble"></i></a>
                        <a class="sk" href="#"><i class="icon-skype"></i></a>
                    </div>
                    <!-- End Social Icons -->

                </div>
                <div class="wrap-right">
                    @Html.Partial("_Login")
                </div>
            </div>
        </div>
        <!-- END TOP BAR 
	============================================= -->

        <!-- HEADER 
	============================================= -->
        @Html.Partial("_Menu")
        <!-- END HEADER 
	============================================= -->

        <!-- CONTENT 
	============================================= -->
