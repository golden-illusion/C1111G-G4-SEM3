<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/main")
    @Styles.Render("~/Content/responsive")
    @*@Styles.Render("~/Content/prettyPhoto")*@
    @Styles.Render("~/Content/settings")
    @Styles.Render("~/Content/turquoise")

</head>

<body>

    <div class="main">

        <!-- TOP BAR 
	============================================= -->
        <div class="b-top-bar">
            <div class="layout">
                <!-- Some text -->
                <div class="wrap-left">
                    <!-- Phone -->
                    <span class="top-bar-phone"><span class="icon-phone">Call us: </span>1.244.145.3232</span>
